{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "rootDir": "./",
    "moduleResolution": "nodenext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "isolatedModules": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["backend/src/*"]
    }
  },
  "include": [
    "backend/src/**/*",
    // "__tests__/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
