{
  "compilerOptions": {
    "target": "ES2022",
    "module": "CommonJS",
    "rootDir": "./src",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "drizzle-orm/*": ["../node_modules/drizzle-orm/*"]
    },
    "types": [
      "node",
      "express",
      "multer",
      "bcryptjs",
      "cloudinary",
      "jsonwebtoken",
      "pg",
      "nodemailer",
      "dotenv",
      "cors",
      "drizzle-orm"
    ],
    "resolveJsonModule": true,
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
